    <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
        <% @last_cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <% if cocktail.photo? %>
              <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill; %>');">
            <% else %>
              <div class="card" style="background-image: url('http://placehod.it/300x400');">
            <% end %>
              <div class="card-description">
                <h2><%= cocktail.name %></h2>
                <p><%= cocktail.doses.length %> dose(s) needed</p>
              </div>
              <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
            </div>
          </div>
        <% end %>


        </div>
      </div>
    </div>
  </div>



<% content_for(:js) do %>
  <%= javascript_tag do %>
    $('.count').each(function () {
        $(this).prop('Counter',0).animate({
            Counter: $(this).text()
        }, {
            duration: 2500,
            easing: 'swing',
            step: function (now) {
                $(this).text(Math.ceil(now));
            }
        });
    });

  <% end %>
<% end %>
