<div class="container">
  <div class="row">
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
    <table class="table table-hover text-left">
      <thead>
        <th><div>Cocktail Name</div></th>
        <th><div>Ingredients needed</div></th>
      </thead>
      <tbody>
       <% @cocktails.each do |cocktail| %>
        <tr>
          <td><%= link_to cocktail.name, cocktail_path(cocktail) %></td>
          <td><%= cocktail.ingredients.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
